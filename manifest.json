{
    "manifest_version": 2,

    "name": "SupportalSupport",
    "description": "Simplifies searching within the Supportal database.",
    "version": "3.1",

    "background": {
        "scripts": ["js/background.js"]
    },
    "browser_action": {
        "default_icon": "icons/grey/icon_16.png",
        "default_popup": "popup/popup.html"
    },
    "permissions": [
        "activeTab",
        "contextMenus",
        "tabs",
        "storage",
        "notifications",
        "https://supportal2.blendle.io/*"
    ],
    "content_scripts": [
        {
            "matches": ["https://supportal2.blendle.io/*"],
            "run_at": "document_end",
            "js": ["js/supportalCS.js"]
        },
        {
            "matches": ["https://blendle.zendesk.com/agent/tickets/*"],
            "run_at": "document_end",
            "js": ["js/zendeskCS.js"]
        }
    ],
    "icons": {
        "16": "icons/color/icon_16.png",
        "32": "icons/color/icon_32.png",
        "64": "icons/color/icon_64.png",
        "128": "icons/color/icon_128.png",
        "256": "icons/grey/icon_256.png",
        "512": "icons/grey/icon_512.png"
    },
    "commands": {
        "_execute_browser_action": {
            "suggested_key": {
                "default": "Ctrl+Z",
                "mac": "MacCtrl+Z"
            },
            "description": "Open extension"
        },
        "goToNextPage": {
            "suggested_key": {
              "default": "Ctrl+X",
              "mac": "MacCtrl+X"
            },
            "description": "Go to next Supportal or Zendesk tab"
        }
    }
}
